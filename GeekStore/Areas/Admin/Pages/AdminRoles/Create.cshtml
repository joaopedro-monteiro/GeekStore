@page
@model GeekStore.Areas.Admin.Pages.AdminRoles.CreateModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<body class="vh-98 gradient-custom">
    <section>
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Nova Role</h3>
                            <a asp-page="/AdminRoles/Index" class="btn btn-primary btn-sm position-absolute top-0 start-0 m-3">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <form method="post">
                                <div class="row align-items-center justify-content-center">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline text-center">
                                            <input class="form-control form-control-lg" asp-for="NameNewRole" />
                                            <label class="form-label">Nome da Role</label>
                                            <span class="text-danger" asp-validation-for="NameNewRole"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 pt-2 text-center">
                                    <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Criar" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
