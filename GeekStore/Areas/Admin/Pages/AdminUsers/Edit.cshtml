@page
@model GeekStore.Areas.Admin.Pages.AdminUsers.UpdateModel
@{
}

<body>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card card-secondary card-outline">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title m-0">Editar Usuário</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12 mb-4 text-center">
                                <div data-mdb-input-init class="form-outline">
                                    <input class="form-control form-control-lg" value="@Model.UserEdit!.UserName" asp-for="@Model.UserEdit!.UserName" />
                                    <label class="form-label">Nome Completo</label>
                                    <span asp-validation-for="@Model.UserEdit.UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4 pb-2">
                                <div data-mdb-input-init class="form-outline">
                                    <input class="form-control form-control-lg" value="@Model.UserEdit.Email" asp-for="@Model.UserEdit.Email" />
                                    <label class="form-label">E-mail</label>
                                    <span asp-validation-for="@Model.UserEdit.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4 pb-2">
                                <div data-mdb-input-init class="form-outline">
                                    <input type="text" id="celular" class="form-control form-control-lg" value="@Model.UserEdit.PhoneNumber" asp-for="@Model.UserEdit.PhoneNumber" placeholder="(xx) xxxxx-xxxx" onclick="celularMask()" />
                                    <label class="form-label">Celular</label>
                                    <span asp-validation-for="@Model.UserEdit.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-2 text-center">
                            <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Salvar" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


