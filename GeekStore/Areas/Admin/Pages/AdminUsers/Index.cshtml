@page
@model GeekStore.Areas.Admin.Pages.AdminUsers.IndexModel
@{
}

@* <link rel="stylesheet" href="~/css/tableStyle.css" /> *@

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <strong>Tabela de Usuários</strong>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped table-borderless">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Nome do Usuário</th>
                                <th scope="col">E-mail</th>
                                <th scope="col">Permissão</th>
                                <th scope="col">Ações</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var users in Model.Table!)
                            {
                                <tr>
                                    <td>@users.UserName</td>
                                    <td>@users.Email</td>
                                    <td>@users.RoleName</td>
                                    <td>
                                        <a asp-page="Edit" asp-route-id="@users.Id"><i class="fa-solid fa-pen-to-square" title="Editar"></i></a>
                                        <a asp-page="Delete" asp-route-id="@users.Id" asp-route-rolename="@users.RoleName"><i class="fa-solid fa-trash" title="Excluir"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>