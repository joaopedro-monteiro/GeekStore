@page
@model GeekStore.Pages.Account.Register.IndexModel
@{
    Layout = "Shared/_LayoutDeslogado";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Nova Conta</title>
    <link rel="stylesheet" href="css/novaconta.css" />
    <script defer src="js/login/novaconta.js"></script>
</head>
<body class="vh-98 gradient-custom">
    <section>
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Nova Conta</h3>
                            <form method="post" asp-page-handler="Register">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input class="form-control form-control-lg" asp-for="Model!.UserName" />
                                            <label class="form-label">Nome Completo</label>
                                            <span asp-validation-for="Model!.UserName" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">
                                        <div data-mdb-input-init class="form-outline">
                                            <input class="form-control form-control-lg" asp-for="Model!.Email" />
                                            <label class="form-label">E-mail</label>
                                            <span asp-validation-for="Model!.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" id="celular" class="form-control form-control-lg" asp-for="Model!.PhoneNumber" placeholder="(xx) xxxxx-xxxx" onclick="celularMask()" />
                                            <label class="form-label">Celular</label>
                                            <span asp-validation-for="Model!.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input class="form-control form-control-lg" asp-for="Model!.Password" />
                                            <label class="form-label">Senha</label>
                                            <span asp-validation-for="Model!.Password" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div data-mdb-input-init class="form-outline">
                                            <input class="form-control form-control-lg" asp-for="Model!.ConfirmPassword" />
                                            <label class="form-label">Confirme a senha</label>
                                            <span asp-validation-for="Model!.ConfirmPassword" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>

                                <div class="mt-4 pt-2">
                                    <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Criar" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

<script>
    function celularMask() {
        const element = document.getElementById('celular');
        const maskOptions = {
            mask: '(00) 00000-0000',
        };
        const mask = IMask(element, maskOptions);
    }

    function dataNascimentoMask() {
        const element = document.getElementById('dataNascimento');
        const maskOptions = {
            mask: '00/00/0000'
        };
        const mask = IMask(element, maskOptions);
    }
</script>